<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8034A2DA"
        >

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="我的目标"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingRight="40dp"


            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@drawable/black"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/black"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goal"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/goal_numerical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:textColor="@drawable/black"
            />

        <RadioButton
            android:id="@+id/r_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"


            />


        <TextView
            android:id="@+id/goal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="做完数学作业"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="@drawable/black"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_add_goal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80f4f4f4"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/plan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plan"
            android:layout_marginLeft="65dp"


            />

        <Button
            android:id="@+id/complete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/complete"
            android:layout_marginLeft="83dp"
            />


        <Button
            android:id="@+id/limit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/limit"
            android:layout_marginLeft="75dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#80f4f4f4"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="计划"
            android:textColor="@drawable/black"
            android:textSize="10dp"
            android:layout_marginLeft="71dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已完成"
            android:textColor="@drawable/black"
            android:textSize="10dp"
            android:layout_marginLeft="87dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="逾期"
            android:textSize="10dp"
            android:layout_marginLeft="81dp"
            android:textColor="@drawable/black"
            />





    </LinearLayout>









</LinearLayout>