<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#34A2DA"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/back"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="编辑目标"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingRight="40dp"


            />



    </LinearLayout>

    <TextView
        android:id="@+id/select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您选择的时间为："
        android:padding="10dp"
        android:gravity="center"
        android:background="#D9ffff"
        android:textColor="@drawable/black"
        />
    <Button
        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="选择时间"
        android:background="@drawable/btshape2"
        android:textColor="@drawable/black"


        />






    <EditText
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:hint="请输入您的目标"
        android:gravity="center"
        android:textColorHint="@drawable/black"
        android:background="@drawable/editshape"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#80f4f4f4"
       >

        <Button
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btshape3"
            android:textColor="@drawable/black"
        android:text="确定"/>


        <Button
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btshape3"
            android:textColor="@drawable/black"
            android:text="取消"/>



    </LinearLayout>




</LinearLayout>